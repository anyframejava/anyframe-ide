<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
    
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%-5p] %d{yyyy-MM-dd HH:mm:ss} %c %n%m%n" />
        </layout>   
    </appender>
    
    <!--  for mvc exception logging -->
	<logger name="controller.logs" additivity="false">
		<level value="WARN" />
		<appender-ref ref="console" />
	</logger>

	<logger name="org.anyframe.springrest.example" additivity="false">	
        <level value="DEBUG"/>
        <appender-ref ref="console"/>
    </logger>  
 
   	<logger name="org.springframework.web.servlet.view" additivity="false">
   		<level value="DEBUG"/>
   		<appender-ref ref="console"/>
   	</logger>
   	
    <root>
    	<level value="ERROR"/>
    	<appender-ref ref="console"/>
    </root>
</log4j:configuration>
