<?xml version="1.0" encoding="UTF-8"?>
<queryservice xmlns="http://www.anyframejava.org/schema/query/mapping" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.anyframejava.org/schema/query/mapping http://www.anyframejava.org/schema/query/mapping/anyframe-query-mapping-1.0.xsd ">

	<queries>
		<query id="findJqueryBoardFileList" isDynamic="true" mappingStyle="upper">
			<statement>
				SELECT
				ID, NAME, REF_ID, FILE_SIZE
				FROM JQUERY_ATTACHED
				WHERE REF_ID = :POST_ID
				ORDER BY ID DESC
			</statement>
		</query>
		<query id="createJqueryBoardFile" isDynamic="true" mappingStyle="upper">
			<statement>
				INSERT INTO JQUERY_ATTACHED
				(ID, NAME, REF_ID, FILE_SIZE)
				VALUES (:ID, :NAME, :REF_ID, :FILE_SIZE)
			</statement>
		</query>
		<query id="updateJqueryBoardFile" isDynamic="true" mappingStyle="upper">
			<statement>
				UPDATE JQUERY_ATTACHED
				SET
				NAME = :NAME, REF_ID = :REF_ID, FILE_SIZE = :FILE_SIZE
				WHERE ID = :ID
			</statement>
		</query>
		<query id="removeJqueryBoardFile" isDynamic="true" mappingStyle="upper">
			<statement>
				DELETE FROM JQUERY_ATTACHED
				WHERE ID = :ID
			</statement>
		</query>
	</queries>
</queryservice>