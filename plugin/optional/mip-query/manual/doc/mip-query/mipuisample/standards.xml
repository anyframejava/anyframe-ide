							<entry>문자형</entry>
							<entry>str</entry>
							<entry>strUserNm, strUserId, …</entry>
						</row>
						<row>
							<entry>숫자형</entry>
							<entry>n</entry>
							<entry>nTotAmt, nTaxAmt, …</entry>
						</row>
						<row>
							<entry>boolean형</entry>
							<entry>b</entry>
