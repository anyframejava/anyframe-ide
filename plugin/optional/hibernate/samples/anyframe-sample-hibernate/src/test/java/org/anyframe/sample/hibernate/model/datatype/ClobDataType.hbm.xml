<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.anyframe.sample.hibernate.model.datatype">
	<class name="ClobDataType" table="HIBERNATE_CLOB_DATA_TYPE">
		<id name="no" column="NO" type="int">
			<generator class="assigned"/>
		</id>
		<property name="title" column="TITLE" type="string"/>
		<property name="contentClob" column="CONTENT_CLOB" type="clob"/>
	</class>
</hibernate-mapping>
