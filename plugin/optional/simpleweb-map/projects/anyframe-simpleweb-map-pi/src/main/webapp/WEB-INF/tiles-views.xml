<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
<!--simpleweb-map-configuration-START--> 
	<definition name="mapStandardLayout" template="/WEB-INF/jsp/simpleweb-map/layout/standard.jsp">
        <put-attribute name="left" value="/WEB-INF/jsp/simpleweb-map/layout/left.jsp" />
        <put-attribute name="body" value="/WEB-INF/jsp/simpleweb-map/layout/welcome.jsp" />
    </definition>
	<definition name="mapLayout" template="/WEB-INF/jsp/simpleweb-map/layout/standard.jsp">
        <put-attribute name="left" value="/WEB-INF/jsp/simpleweb-map/layout/left.jsp" />
        <put-attribute name="body" expression="${requestScope.body}" />
    </definition>
<!--simpleweb-map-configuration-END--> 
</tiles-definitions>
